<style>
  .has-search .form-control {
    padding-left: 2.375rem;
  }

  .has-search .form-control-feedback {
    position: absolute;
    z-index: 2;
    display: block;
    width: 2.375rem;
    height: 2.375rem;
    line-height: 2.375rem;
    text-align: center;
    pointer-events: none;
    color: #0057B7;
  }

  #keyword-input {
    border-radius: 25px;
  }
</style>


<div class="container mt-5">
  <%= link_to "No Fact, No Vote", root_path, class: "h3", style: "color: #0057B7" %>
  <h5 class="mt-3">Do not vote without fact</h5>
  <%= form_tag(root_path, method: :get, remote: true, class: "mt-5") do %>

    <div class="form-group has-search">
      <span class="fa fa-search form-control-feedback"></span>
      <input type="search" name="keyword" class="form-control border border-primary" placeholder="당신의 도시 이름을 적으세요11" id="keyword-input">
    </div>
    <button type="submit" class="btn btn vote-color text-white" style="width: 25%; background-color: #0057B7">팩트체크</button>

  <% end %>

  <div class="row" id="filter">
    <%= render 'home/filter', district: @district %>
  </div>

</div>

