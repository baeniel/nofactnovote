<style>
  .carousel-control-prev-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%230057B7' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E");
  }
  .carousel-control-next-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%230057B7' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E");
  }
  .vote-color {
    width: 25%; background-color: #0057B7
  }
</style>

<% if district.present? %>
  <div class="container mb-4">
    <div class="card-group row mt-4">
      <% district.users.each do |user| %>
        <div class="card col-6">
          <img class="card-img-top pt-3" src="<%= user.image_url %>" alt="Card image cap">
          <div class="mt-3">
            <h5 class="card-title"><%= user.name %></h5>
          </div>
          <div class="py-1 mb-3" style="background-color: <%= user.party == "미래통합당" ? '#ff1493' : '#0057B7' %>">
            <small class="text-white"><%= user.party %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
