<style>
  #spinner {
    display: block;
    position: fixed;
    z-index: 1031;
    top: 50%;
    left: 47%;
    bottom: 50%;
    right: 50%;
  }
</style>

<div class="container mt-4">
  <% if alert %>
    <p style="color: #0057B7;"><%= alert %></p>
  <% end %>
  <%= form_for Contact.new do |f| %>
    <div class="form-row text-left mt-2">
      <div class="form-group col-md-4">
        <label for="inputEmail4">제보 제목</label>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <label for="inputPassword4">제보 국회의원</label>
        <%= f.text_field :congress_name, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <label for="inputPassword4">소속당</label>
        <%= f.text_field :congress_party, class: "form-control" %>
      </div>
    </div>
    <div class="form-group text-left">
      <label for="inputAddress">제보 내용</label>
      <%= f.text_area :body, class: "form-control", placeholder: "기사링크나 자료를 첨부해주세요:)", cols: "30", rows: "10"  %>
    </div>
    <button type="submit" class="btn btn-primary vote-color" id="contact">제보하기</button>
  <% end %>
  <div class="spinner-border" role="status" id="spinner" style="color: #0057B7; display: none;">
    <span class="sr-only">Loading...</span>
  </div>
</div>

<script>
  $("#contact").click(function() {
    $('#spinner').css('display', 'block');
  })
</script>
