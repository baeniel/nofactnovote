<div class="container mt-3">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">이름</th>
        <th scope="col">소속당</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr data-link="<%= user_path(user) %>">
          <th scope="row"><%= user.name %></th>
          <% if user.party == "미래통합당" %>
            <td style="color: red;"><%= user.party %></td>
          <% elsif user.party == "더불어민주당" %>
            <td style="color: #0057B7"><%= user.party %></td>
          <% elsif user.party == "정의당" %>
            <td style="color: #FFD700"><%= user.party %></td>
          <% elsif user.party == "민생당" %>
            <td style="color: #FFD700"><%= user.party %></td>
          <% else %>
            <td style="color: #808080"><%= user.party %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users, :outer_window => 2, :window => 2 %>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>
